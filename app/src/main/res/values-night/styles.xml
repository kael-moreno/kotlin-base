<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!-- Dark Mode Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 Color System -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer</item>

        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_onSecondaryContainer</item>

        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_onSurfaceVariant</item>

        <item name="android:colorBackground">@color/md_theme_background</item>
        <item name="colorOnBackground">@color/md_theme_onBackground</item>

        <item name="colorError">@color/md_theme_error</item>
        <item name="colorOnError">@color/md_theme_onError</item>
        <item name="colorErrorContainer">@color/md_theme_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_onErrorContainer</item>

        <item name="colorOutline">@color/md_theme_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_outlineVariant</item>

        <!-- Window configuration -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Toolbar Theme for Dark Mode -->
    <style name="AppTheme.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Dark" />

    <!-- Button Styles -->
    <style name="AppTheme.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/material_text_size_button</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AppTheme.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">@dimen/material_text_size_button</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.Outlined.Thick" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">@dimen/material_text_size_button</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">@dimen/material_text_size_button</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Input Styles -->
    <style name="AppTheme.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Card Styles -->
    <style name="AppTheme.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">@dimen/material_spacing_small</item>
    </style>

    <!-- Dialog Styles -->
    <style name="AppTheme.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Typography Styles -->
    <style name="AppTheme.Text.Headline" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/material_text_size_headline_6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AppTheme.Text.Body" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/material_text_size_body_1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AppTheme.Text.Caption" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/material_text_size_caption</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

</resources>
